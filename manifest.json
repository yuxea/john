{
	"manifest_version": 3,
	"name": "john",
	"version": "0.1.0",
	"description": "A browser extension that bridges your Twitter timeline to Bluesky",
	"icons": {
		"48": "assets/john-48.png"
	},
	"permissions": [
		"storage"
	],
	"optional_host_permissions": [
		"*://*/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://(b|witch)sky.app/*",
				"*://(catsky|deer).social/*",
				"*://blacksky.community/*"
			],
			"js": ["browser-polyfill.js", "content.js"],
			"css": ["content.css"]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"48": "assets/john-48.png"
		}
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "@johnsky"
		}
	}
}
