{
	"manifest_version": 3,
	"name": "bridget",
	"version": "0.1.0",
	"description": "A browser extension that bridges your Twitter timeline to Bluesky",
	"icons": {
		"48": "assets/bridget-48.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"*://bsky.app/*",
				"*://bitchsky.app/*",
				"*://witchsky.app/*",
				"*://catsky.social/*",
				"*://deer.social/*",
				"*://blacksky.community/*"
			],
			"js": ["browser-polyfill.js", "content.js"],
			"css": ["content.css"]
		}
	],
	"background": {
		"scripts": ["browser-polyfill.js", "background.js"]
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "bridget",
		"default_icon": {
			"48": "assets/bridget.png"
		}
	},
	"browser_action": {
		"default_icon": "assets/bridget.png",
		"default_popup": "popup.html"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "@bridgetsky"
		}
	}
}
