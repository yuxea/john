{
	"tasks": {
		"build": "deno run --unstable-bundle --allow-read --allow-write build.ts",
		"check": "deno fmt --check src && deno lint src && deno check src"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"lib": ["deno.window", "dom", "dom.iterable", "webworker"]
	},
	"fmt": {
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		},
		"exclude": ["dist"]
	},
	"imports": {
		"@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@^0.1.56",
		"@mikaelporttila/rss": "jsr:@mikaelporttila/rss@^1.1.3",
		"@std/assert": "jsr:@std/assert@^1.0.16",
		"@std/cli": "jsr:@std/cli@^1.0.25",
		"@std/fs": "jsr:@std/fs@^1.0.21",
		"@std/path": "jsr:@std/path@^1.1.4",
		"preact": "npm:preact@^10.28.1",
		"webextension-polyfill": "npm:webextension-polyfill@^0.12.0",
		"webextension-polyfill-types": "npm:@types/webextension-polyfill@^0.12.4"
	}
}
